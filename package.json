{
  "name": "ng-vcl",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "demo": "npm run dev",
    "dev": "npm-run-all dev:vcl --parallel dev:serve dev:styles",
    "dev:serve": "webpack-dev-server --config webpack.config.demo.js --env.ENV development --env.HMR true",
    "dev:vcl": "vcl-preprocessor demo/styles/index.styl | postcss --use autoprefixer -o demo/app.css",
    "dev:styles": "fsmonitor -d 'demo/styles' npm run dev:vcl",
    "docs:lint": "tslint 'demo/**/*.ts'",
    "docs:clean": "rimraf docs",
    "docs:build": "webpack --config webpack.config.demo.js --env.ENV production",
    "docs": "npm-run-all docs:lint docs:clean docs:build",
    "build:lint": "tslint './src/**/*.ts'",
    "build:clean": "rimraf dist",
    "build:bundle": "webpack --config webpack.config.js --env.ENV production",
    "build:ngc": "ngc -p tsconfig.build.json",
    "build:copy": "node copy.js",
    "build": "npm-run-all build:lint build:clean build:bundle build:ngc build:copy",
    "deploy:dist": "git-directory-deploy --directory dist --branch dist",
    "deploy:docs": "git-directory-deploy --directory docs --branch gh-pages",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm-run-all build:lint docs:lint",
    "clean": "npm-run-all build:clean docs:clean",
    "docker": "docker run -it -v $(pwd):/app -p 0.0.0.0:3000:3000 node:6.9.1 /bin/bash /app/entrypoint.bash"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ng-vcl/ng-vcl.git"
  },
  "keywords": [
    "web-component",
    "angular",
    "VCL"
  ],
  "author": "The ng-vcl authors",
  "license": "MIT",
  "main": "ng-vcl.js",
  "typings": "index.d.ts",
  "peerDependencies": {
    "@angular/common": "^2.3.0",
    "@angular/core": "^2.3.0",
    "@angular/forms": "^2.3.0",
    "@angular/http": "^2.3.0",
    "@angular/platform-browser": "^2.3.0",
    "@angular/router": "^3.3.0",
    "rxjs": "^5.0.1"
  },
  "devDependencies": {
    "@angular/common": "^2.4.2",
    "@angular/compiler": "^2.4.2",
    "@angular/compiler-cli": "^2.4.2",
    "@angular/core": "^2.4.2",
    "@angular/forms": "^2.4.2",
    "@angular/http": "^2.4.2",
    "@angular/platform-browser": "^2.4.2",
    "@angular/platform-browser-dynamic": "^2.4.2",
    "@angular/router": "^3.4.2",
    "@types/core-js": "~0.9.34",
    "@types/marked": "~0.0.28",
    "@types/requirejs": "~2.1.28",
    "@types/tether": "~1.1.27",
    "angular2-template-loader": "~0.6.0",
    "autoprefixer": "~6.5.3",
    "awesome-typescript-loader": "3.0.0-beta.17",
    "browser-sync": "^2.18.2",
    "connect-history-api-fallback": "1.3.0",
    "copy-webpack-plugin": "^4.0.1",
    "core-js": "2.4.1",
    "cpr": "2.0.0",
    "css-loader": "^0.26.0",
    "express": "4.14.0",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "fsmonitor": "0.2.4",
    "fuse.js": "^2.5.0",
    "git-directory-deploy": "^1.5.1",
    "html-webpack-plugin": "^2.24.1",
    "ignore-loader": "^0.1.2",
