    "marked": "^0.3.6",
    "npm-run-all": "3.1.1",
    "postcss-cli": "2.6.0",
    "pre-commit": "^1.1.3",
    "raw-loader": "0.5.1",
    "rimraf": "^2.5.4",
    "rxjs": "^5.0.0-rc.4",
    "style-loader": "0.13.1",
    "tslint": "^4.0.2",
    "typescript": "~2.1.4",
    "vcl-core-modules": "^0.1.1",
    "vcl-default-theme": "^0.1.2",
    "vcl-default-theme-terms": "^0.1.0",
    "vcl-font-awesome": "^0.1.0",
    "vcl-preprocessor": "^0.1.1",
    "webpack": "2.1.0-beta.27",
    "webpack-dev-server": "2.1.0-beta.11",
    "zone.js": "^0.7.2"
  },
  "dependencies": {
