{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "types": [
      "core-js",
      "requirejs"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ]
}
